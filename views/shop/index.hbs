<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>

{{# each products }}
<div class="card-deck">
    {{# each this }}
    <div class="card card-bg mb-4">
        <img class="card-img-top card-img" src="{{ this._doc.imagePath }}" alt="book image">
        <div class="card-body">
            <h5 class="card-title">{{ this._doc.title }}</h5>
            <p class="card-text">{{ this._doc.description }}</p>
        </div>
        <div class="card-footer clearfix ">
            <div class="price pull-left">â‚¹{{ this._doc.price }}</div>
            <a href="/add-to-cart/{{this._doc._id}}" class="btn btn-primary pull-right" role="button"
                aria-pressed="true">Add to cart</a>
        </div>
    </div>
    {{/each}}

</div>

{{/each}}